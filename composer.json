{
	"name": "artemsk/veer",
	"description": "The Veer Layer.",
	"keywords": ["cms", "veer", "laravel-based"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"doctrine/dbal": "~2.3",
        "artemsk/queuedb": "*",
		"erusev/parsedown": "*",
		"guzzlehttp/guzzle": "~5.0",
		"illuminate/html" : "5.0.*@dev"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"files": [
			"app/helpers.php"
		],		
		"psr-4": {
			"Veer\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
