{
	"name": "artemsk/veer",
	"description": "The Veer Layer.",
	"keywords": ["cms", "veer", "laravel-based"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"doctrine/dbal": "~2.4",
		"erusev/parsedown": "*",
		"guzzlehttp/guzzle": "~5.0",
		"predis/predis": "~1.0",
		"artemsk/veer-wkhtmltoimage": "*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"files": [
			"app/helpers.php"
		],		
		"psr-4": {
			"Veer\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
    "suggest": {
        "artemsk/veer-extra": "Extra components, commands, events.",
		"artemsk/veer-themes": "Extra themes."
    },	
	"scripts": {
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
